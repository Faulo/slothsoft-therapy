<?xml version="1.0"?>
<assets xmlns="http://schema.slothsoft.net/farah/module">
    <resource-directory name="css"  type="text/css"/>
    <resource-directory name="js"  type="application/javascript"/>
    <resource-directory name="xsl"  type="application/xslt+xml"/>
    
    <directory name="static">
      <resource-directory name="wochenziele"  type="application/xml"/>
      <resource-directory name="happiness"  type="text/csv">
        <options del="&#9;"/>
      </resource-directory>
      <resource-directory name="timecapsules"  type="text/plain"/>
    </directory>
	
	<fragment name="html">
	    <fragment name="clinic">
	      <use-document ref="api/form"/>
	      <use-template ref="xsl/clinic"/>
	      <import ref="//slothsoft@core/api/HTML5"/>
	      <link-stylesheet ref="css/default"/>
	    </fragment>
	    
	    <fragment name="happiness">
	      <use-template ref="xsl/happiness"/>
	      <import ref="//slothsoft@core/api/HTML5"/>
	      <link-stylesheet ref="css/default"/>
	      <fragment name="graph">
	        <use-document ref="static/happiness"/>
	        <use-template ref="xsl/happiness.graph"/>
	      </fragment>
	    </fragment>
	 </fragment>
	 
	 <fragment name="api">
	 	<custom-asset name="form" class="Slothsoft\Therapy\Assets\FormController"/>
	 </fragment>
  </assets>
